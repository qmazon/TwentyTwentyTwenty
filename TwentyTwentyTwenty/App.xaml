<Application x:Class="TwentyTwentyTwenty.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TwentyTwentyTwenty"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             DispatcherUnhandledException="App_OnDispatcherUnhandledException"
             Exit="App_OnExit">
    <Application.Resources>
        <!-- 托盘右键菜单 -->
        <ContextMenu x:Shared="false" x:Key="TrayMenu">
            <MenuItem Header="立刻休息" Command="{x:Static local:App.ShowWindowCommand}"></MenuItem>
            <MenuItem Header="退出" Click="Exit_Click"/>
        </ContextMenu>

        <!-- 托盘图标 -->
        <tb:TaskbarIcon x:Key="TrayIcon"
                        IconSource="pack://application:,,,/Assets/eye.ico"
                        ToolTipText="{Binding Source={x:Static local:App.CurrentApp}, Path=ToolTipText}"
                        MenuActivation="RightClick"
                        DoubleClickCommand="{x:Static local:App.ShowWindowCommand}"
                        ContextMenu="{StaticResource TrayMenu}"/>
    </Application.Resources>
</Application>
